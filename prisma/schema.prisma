generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement()) 
  email       String   @unique  
  password    String   
  name        String   
  events      Event[]  
  createdAt   DateTime @default(now()) 
  updatedAt   DateTime @updatedAt 

  @@index([email])  
}

model Event {
  id          Int      @id @default(autoincrement()) 
  title       String   
  description String   
  content     String   
  details     String   
  startTime   DateTime 
  endTime     DateTime 
  venue       String   
  venueAddress String  
  month       String   
  day         String   
  organizerId Int      
  organizer   User     @relation(fields: [organizerId], references: [id]) 
  imageUrl    String   
  createdAt   DateTime @default(now()) 
  updatedAt   DateTime @updatedAt 

  @@index([organizerId]) 
}